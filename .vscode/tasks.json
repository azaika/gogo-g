{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C: gcc build main.c (DEBUG)",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/source/main.c",
                "-DDEBUG",
                "-o",
                "${workspaceFolder}/gogo.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}